<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AulaDeIngles</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AulaDeIngles.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{
            var isLogged = Context.Session.GetString("auth") == "ok";
            var user = Context.Session.GetString("user") ?? "";
            var role = Context.Session.GetString("role") ?? "";
        }

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Library">
                    <span class="me-2 logo-dot"></span>
                    <span>AulaDeIngles</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Library">Biblioteca</a>
                        </li>
                        @if (role == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/EditLibrary">Editar Biblioteca</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/CadastrarAluno">Cadastrar Aluno</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (!isLogged)
                        {
                            <a class="btn btn-outline-light btn-sm me-2" asp-page="/Login">Entrar</a>
                        }
                        else
                        {
                            <div class="me-3 text-white small text-end">
                                <div>@user</div>
                                <div><span class="badge bg-light text-primary">@role</span></div>
                            </div>
                            <a class="btn btn-light btn-sm" asp-page="/Logout">Sair</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - AulaDeIngles
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

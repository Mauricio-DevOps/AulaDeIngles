@page
@model AulaDeIngles.Pages.ItemModel
@{
    ViewData["Title"] = "Conteúdo";
}

@if (Model.Item == null)
{
    <div class="alert alert-warning">Item não encontrado.</div>
}
else
{
    <div class="card content-card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                    <h4 class="card-title mb-1">@Model.Item.Title</h4>
                    <div class="text-muted small">Tipo: <span class="fw-semibold">@Model.Item.Type</span></div>
                </div>
                <div class="text-end">
                    <form method="post" class="d-inline-block text-end">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="IsDone" id="isDoneSwitch" />
                            <label class="form-check-label small text-muted" for="isDoneSwitch">Concluído</label>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-sm btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="item-content">
                @if (Model.Item.Type == "text")
                {
                    <pre class="content-pre">@Model.TextContent</pre>
                }
                else if (Model.Item.Type == "audio")
                {
                    <audio controls style="width:100%" class="mb-2">
                        <source src="@Model.Item.Path" type="audio/mpeg" />
                        Seu navegador não suporta áudio.
                    </audio>
                }
                else if (Model.Item.Type == "pdf")
                {
                    <div class="ratio ratio-4x3">
                        <iframe src="@Model.Item.Path"></iframe>
                    </div>
                }
                else if (Model.Item.Type == "link")
                {
                    <a class="btn btn-outline-primary" href="@Model.Item.Path" target="_blank" rel="noopener">Abrir link</a>
                }
                else
                {
                    <p class="small text-muted mb-0">Caminho: @Model.Item.Path</p>
                }
            </div>
        </div>
        <div class="card-footer bg-transparent">
            <a class="btn btn-sm btn-outline-secondary" asp-page="/Lesson" asp-route-id="@Model.LessonId">← Voltar</a>
        </div>
    </div>
}

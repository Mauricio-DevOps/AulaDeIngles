@page
@model AulaDeIngles.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-page d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <h3 class="mb-0">AulaDeIngles</h3>
                            <small class="text-muted">Área de acesso</small>
                        </div>

                        <form method="post" class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="user@teste.com" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Senha</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Sua senha" />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Error))
                            {
                                <div class="alert alert-danger mt-3" role="alert">@Model.Error</div>
                            }
                        </form>

                        <div class="text-center mt-3 text-muted small">
                            Usuário de teste: <strong>user@teste.com</strong> / <strong>123</strong>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3 small text-muted">© 2026 AulaDeIngles</div>
            </div>
        </div>
    </div>
</div>
